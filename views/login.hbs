<header class="header clearfix" ng-controller="HeaderController as HeaderController">
    <a href="/"><span class="brand brand-medium brand-white"><{ HeaderController.consts.appname }></span></a>
    <a class="link link-white link-bold" href="/register">Join Now</a>
</header>

<div class="login-view clearfix"
     ng-controller="LoginController as LoginController"
     ng-cloak
     ng-init="LoginController.init()">
    <form class="loginForm" action="/login" method="post">
        <span class="h1 white form-header">Welcome back to <{ LoginController.consts.appname }>!</span>
        <div class="form-group form-group-light form-group-animated">
            <input
                type="text"
                class="form-control"
                name="username"
                required="true" />
            <span class="bar"></span>
            <label>Username</label>
        </div>
        <div class="form-group form-group-light form-group-animated">
            <input
                type="password"
                class="form-control"
                name="password"
                required="true" />
            <span class="bar"></span>
            <label>Password</label>
        </div>
        <button class="btn btn-pill btn-white btn-form" type="submit">Login</button>
    </form>
</div>
